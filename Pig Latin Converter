from sys import exit

while True:
	origWord = raw_input("Enter a word: ")
	
	# Forcing User input  
	if len(origWord) > len("") and origWord.isalpha():
	
		# uppercase to lowercase
		lowercaseWord = origWord.lower()
		pygLatinWord = lowercaseWord + lowercaseWord[0] + "ay"

		# CONVERTS TO PYGLATIN
		pygLatinWord = pygLatinWord[1:len(pygLatinWord)]
		
		print origWord + " is pyglatin for: " + pygLatinWord + "."
				
		quit = raw_input("\nEnter 'quit' to exit the program or enter any key to continue: ")
				
		if quit == "quit":
				exit(0)
	
	else:
		print "Error. Please type something else."
		
